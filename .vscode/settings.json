{
  "sqltools.connections": [
    {
      "previewLimit": 50,
      "driver": "DuckDB",
      "database": "./dbt/dev.duckdb",
      "name": "dev"
    }
  ],
  "sqltools.useNodeRuntime": true,
  "files.associations": {
    "*.sql": "jinja-sql",
    "*.yml": "jinja-yaml"
  },
  "[jinja-sql]": {
    "editor.defaultFormatter": "innoverio.vscode-dbt-power-user"
  },
  "[jinja-yaml]": {
    "editor.defaultFormatter": "innoverio.vscode-dbt-power-user",
    "prettier.tabWidth": 2
  }
}
